<% provide(:title, '勤怠登録') %>
<% provide(:button_text, "登録") %>
<h1>勤怠登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for user_attendances_path do |f| %>
      <%= render 'shared/error_messages', object: @attendance %>
    
      <%= f.label :"出勤日" %>
      <%= f.date_field :worked_on, class: 'form-control' %>
    
      <%= f.label :"出勤時間" %>
      <%= f.time_field :started_at, class: 'form-control' %>
      
      <%= f.label :"退勤時間" %>
      <%= f.time_field :finished_at, class: 'form-control' %>
    
      <%= f.label :"備考" %>
      <%= f.text_field :note, class: 'form-control' %>
    
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>